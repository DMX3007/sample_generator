  body(ng-app="amo_double_contacts")
    .container
      .row
        ul.nav.nav-pills.nav-menu
          li(ui-sref="journals", ui-sref-active="active")
            a(href="#") Журналы
          li(ui-sref="reports", ui-sref-active="active")
            a(href="#") Отчеты
          li(ui-sref="links", ui-sref-active="active")
            a(href="#") Ссылки
          li(ui-sref="monitor", ui-sref-active="active")
            a(href="#") Монитор
        ui-view

    style.
      div.jGrowl {
        padding: 10px;
        z-index: 9999;
        color: #fff;
        font-size: 12px;
      }

      div.jGrowl .warning {
        background-color: orange !important;
        color: black;
      }

      div.jGrowl .success {
        background-color: #5eb95e !important;
        color: black;
      }

      div.jGrowl .error {
        background-color: #ff3333 !important;
        color: black;
      }
